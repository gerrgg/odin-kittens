<% provide(:title, @kitten.name) %>

<div id="kitten-<%= @kitten.id %>" class="text-center mx-auto">
    <h1>
        <%= @kitten.name %>
        <%= fa_icon 'user' %>
    </h1>
    <table class="table w-50 mx-auto">
        <tr>
            <th>Age:</th>
            <td><%= @kitten.age %></td>
        </tr>
        <tr>
            <th>Cuteness:</th>
            <td><%= @kitten.cuteness %></td>
        </tr>
        <tr>
            <th>Softness:</th>
            <td><%= @kitten.softness %></td>
        </tr>
    </table>
    <div class="actions">
        <%= link_to 'Edit', edit_kitten_path(@kitten), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', kitten_path(@kitten), class: 'btn btn-danger delete',
                                                    method: :delete,
                                                    data: { confirm: "Are you sure?" } %>
    </div>
</div>